<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_margin="8dp"
        android:elevation="4dp">

        <!-- Q7 -->
        <TextView
            android:text="7. Why did you download BeAlive?"
            style="@style/OnboardingText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbReasonLessPhone"
            style="@style/OnboardingText"
            android:text="To spend less time on my phone"
            android:padding="8dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbReasonBetterSleep"
            style="@style/OnboardingText"
            android:text="To sleep better"
            android:padding="8dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbReasonAddiction"
            style="@style/OnboardingText"
            android:text="To overcome social media addiction"
            android:padding="8dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbReasonRealLife"
            style="@style/OnboardingText"
            android:text="To focus more on real life"
            android:padding="8dp"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Q8 -->
        <TextView
            android:text="8. What would success look like in 30 days?"
            style="@style/OnboardingText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etGoalText"
            style="@style/OnboardingText"
            android:hint="Type your goal..."
            android:padding="12dp"
            android:backgroundTint="@color/tealColor"
            android:minHeight="48dp"
            android:importantForAccessibility="yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Finish -->
        <Button
            android:id="@+id/btnFinishOnboarding"
            android:text="Finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/tealColor"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/ic_baseline_check_24"
            android:drawablePadding="8dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
