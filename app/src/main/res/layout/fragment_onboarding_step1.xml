<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Q1 -->
        <TextView
            android:text="1. How many hours do you use your phone daily?"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgPhoneUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1–2 hours" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2–4 hours" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="4–6 hours" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="6+ hours" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="I don't know / I’d like to find out" android:minHeight="48dp" />
        </RadioGroup>

        <!-- Q2 -->
        <TextView
            android:text="2. When do you use your phone the most?"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgTimeOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Morning" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="During work/study" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Evening" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="All day" android:minHeight="48dp" />
        </RadioGroup>

        <!-- Q3 -->
        <TextView
            android:text="3. Why do you usually reach for your phone?"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgPhoneReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Boredom" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Stress relief" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Social contact" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Social media" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Entertainment/games" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Work/study" android:minHeight="48dp" />
            <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Just a habit" android:minHeight="48dp" />
        </RadioGroup>

        <!-- Next button -->
        <Button
            android:id="@+id/btnNextStep1"
            android:text="Next"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
