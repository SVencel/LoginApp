<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@drawable/card_bg"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section Name -->
        <TextView
            android:id="@+id/tvSectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Section"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- Day Indicators -->
        <LinearLayout
            android:id="@+id/dayIndicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/tvSectionName"
            android:layout_alignTop="@id/tvSectionName"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />

        <!-- Time Range -->
        <TextView
            android:id="@+id/tvTimeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 - 18:00"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@id/tvSectionName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <!-- App Icons -->
        <LinearLayout
            android:id="@+id/llAppIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTimeRange"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical" />

        <!-- Gear Icon -->
        <ImageView
            android:id="@+id/ivSectionOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gear"
            android:contentDescription="Options"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
