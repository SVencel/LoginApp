<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Section Name -->
        <TextView
            android:id="@+id/tvSectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Section"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimaryColor"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- Day Indicators -->
        <LinearLayout
            android:id="@+id/dayIndicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/tvSectionName"
            android:layout_alignTop="@id/tvSectionName"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />

        <!-- Time Range -->
        <TextView
            android:id="@+id/tvTimeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 - 18:00"
            android:textColor="@color/textSecondaryColor"
            android:textSize="14sp"
            android:layout_below="@id/tvSectionName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <!-- App Icons Row -->
        <LinearLayout
            android:id="@+id/llAppIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTimeRange"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical" />

        <!-- Gear Icon -->
        <ImageView
            android:id="@+id/ivSectionOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gear"
            android:contentDescription="Options"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/textSecondaryColor" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
