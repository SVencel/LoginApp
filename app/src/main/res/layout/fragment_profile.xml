<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logged in as: "
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvPermissionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Checking permissions..."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Productivity threshold (minutes)"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:maxLines="1"
            android:hint="Custom motivational message"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ Goals loading..."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Save" />

        <View
            android:layout_height="32dp"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸšª Logout"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
