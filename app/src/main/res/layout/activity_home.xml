<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Root layout for confetti targeting -->
    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main UI content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar with Hamburger Menu -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="Home"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <!-- Streak Counter -->
            <TextView
                android:id="@+id/tvStreakCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Streak: 0 Days"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:textColor="@color/primaryColor"/>

            <!-- Chart Section with ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/chartViewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never"/>

            <!-- Dots Indicator for Chart Swiping -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/chartTabIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <!-- Monitoring Info Box -->
            <LinearLayout
                android:id="@+id/infoBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/warningColor"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App monitoring is not enabled. Please enable monitoring in settings."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/btnGoToSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Settings"
                    android:backgroundTint="@color/primaryColor"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Existing UI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/btnSetLockSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Set Lock Schedule" />
            </LinearLayout>
        </LinearLayout>

        <!-- Confetti View as overlay -->
        <com.github.jinatonic.confetti.ConfettiView
            android:id="@+id/confettiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
    </FrameLayout>

    <!-- Side Navigation Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
