<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar with Hamburger Menu -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Home"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <!-- Existing UI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:background="@color/backgroundColor">

            <!-- Switch to Toggle Views -->
            <Switch
                android:id="@+id/switchViewMode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Show Chart View"
                android:checked="false"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"/>

            <!-- Text View for List Mode -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUsageStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading usage stats..."
                    android:textSize="18sp"
                    android:textColor="@color/primaryColor"
                    android:padding="16dp"
                    android:background="@drawable/rounded_textview"
                    android:layout_marginBottom="24dp"
                    android:textAlignment="center"/>
            </ScrollView>

            <!-- Bar Chart for Graph Mode (Initially Hidden) -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="@color/secondaryColor"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnEnableAccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Monitoring"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Side Navigation Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
