<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Motivation -->
        <TextView
            android:id="@+id/tvMotivationQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Focus is a superpower.”"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="@color/textSecondaryColor"
            android:layout_marginBottom="24dp" />

        <!-- Hardcore Mode Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHardcore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/headerHardcore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:padding="12dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="☠️ HARDCORE MODE"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchHardcore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Expandable Content -->
                <LinearLayout
                    android:id="@+id/expandableHardcore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/ivHardcoreInfo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/textSecondaryColor"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is Hardcore Mode?"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondaryColor" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Doomscroll Card (same pattern) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDoomscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/headerDoomscroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:padding="12dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🌀 Doomscroll Detection"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDoomscroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Expandable Content -->
                <LinearLayout
                    android:id="@+id/expandableDoomscroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvDoomscrollLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limit: 9 scrolls in 5 minutes"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondaryColor"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSensitivityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detection: Medium"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondaryColor"
                        android:layout_marginBottom="4dp" />

                    <SeekBar
                        android:id="@+id/seekBarDoomSensitivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="2"
                        android:progress="1"
                        android:thumbTint="@color/primaryColor"
                        android:progressTint="@color/primaryColor" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Productivity Threshold Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProductivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/headerProductivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:padding="12dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🎯 Productivity Threshold"
                        android:textColor="@color/textPrimaryColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchProductivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Expandable Content -->
                <LinearLayout
                    android:id="@+id/expandableProductivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:paddingTop="8dp">

                    <SeekBar
                        android:id="@+id/seekBarProductivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="58"
                        android:progress="50"
                        android:thumbTint="@color/primaryColor"
                        android:progressTint="@color/primaryColor" />

                    <TextView
                        android:id="@+id/tvProductivityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prompt after: 60 minutes"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondaryColor"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Manage Sections -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManageSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Focus Session"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Session List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:paddingTop="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
