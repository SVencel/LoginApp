<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:gravity="top">

    <TextView
        android:id="@+id/tvMotivationQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Focus is a superpower.”"
        android:textStyle="italic"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#F7F7F7"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        android:shape="rectangle"
        android:radius="8dp">

        <Switch
            android:id="@+id/switchHardcore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="☠️ HARDCORE MODE"
            android:textSize="16sp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/ivHardcoreInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_info_24"
                android:contentDescription="Info"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#777" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is Hardcore Mode?"
                android:textColor="#777"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="6dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:padding="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#F7F7F7"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        android:shape="rectangle"
        android:radius="8dp">

        <!-- Doomscroll toggle -->
        <Switch
            android:id="@+id/switchDoomscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☠️ Detect Doomscrolling"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDoomscrollLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limit: 5 scrolls in 10 minutes"
            android:paddingTop="8dp"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Sensitivity slider (should be after the switch + label) -->
        <TextView
            android:id="@+id/tvSensitivityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detection: Medium"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="12dp" />

        <SeekBar
            android:id="@+id/seekBarDoomSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2"
            android:progress="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:thumbTint="@color/primaryColor"
            android:progressTint="@color/primaryColor" />
    </LinearLayout>

    <Button
        android:id="@+id/btnManageSections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Focus Session"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- ✅ New RecyclerView for displaying sections -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
</LinearLayout>
