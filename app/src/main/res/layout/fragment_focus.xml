<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top">

    <TextView
        android:id="@+id/tvMotivationQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Focus is a superpower.”"
        android:textStyle="italic"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <Switch
        android:id="@+id/switchHardcore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="☠️ HARDCORE MODE"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvHardcoreExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allows calls, text messages, alarms. Everything else is silenced."
        android:textSize="14sp"
        android:textColor="#777"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <Switch
            android:id="@+id/switchDoomscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☠️ Detect Doomscrolling"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDoomscrollLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limit: 5 scrolls in 10 minutes"
            android:paddingTop="8dp"
            android:textColor="#666"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnManageSections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Focus Section"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- ✅ New RecyclerView for displaying sections -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
</LinearLayout>
