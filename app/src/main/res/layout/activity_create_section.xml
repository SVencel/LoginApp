<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etSectionName"
            android:hint="Session Name"
            android:textColor="@color/textPrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="textCapWords|textNoSuggestions"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”µ Day Selector -->
        <LinearLayout
            android:id="@+id/daySelectorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            >

            <ToggleButton
                android:id="@+id/toggleMon"
                style="@style/DayToggleStyle"
                android:text="M"
                android:textOn="M"
                android:textOff="M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleTue"
                style="@style/DayToggleStyle"
                android:text="Tu"
                android:textOn="Tu"
                android:textOff="Tu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleWed"
                style="@style/DayToggleStyle"
                android:text="W"
                android:textOn="W"
                android:textOff="W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleThu"
                style="@style/DayToggleStyle"
                android:text="Th"
                android:textOn="Th"
                android:textOff="Th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleFri"
                style="@style/DayToggleStyle"
                android:text="F"
                android:textOn="F"
                android:textOff="F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleSat"
                style="@style/DayToggleStyle"
                android:text="Sa"
                android:textOn="Sa"
                android:textOff="Sa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />

            <ToggleButton
                android:id="@+id/toggleSun"
                style="@style/DayToggleStyle"
                android:text="Su"
                android:textOn="Su"
                android:textOff="Su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/searchAppInput"
            android:layout_width="match_parent"
            android:textColor="@color/textPrimaryColor"
            android:layout_height="wrap_content"
            android:hint="Search apps"
            android:minHeight="48dp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="Select Apps:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewApps"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSaveSection"
            android:text="Save Session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
